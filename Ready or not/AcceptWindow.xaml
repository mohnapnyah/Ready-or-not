<Window x:Class="Ready_or_not.AcceptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ready_or_not"
        mc:Ignorable="d"
        Title="Подтверждение выбора" Height="250" Width="350">
    <Grid>
        <WrapPanel HorizontalAlignment="Center" Margin="0,117,0,74" Width="130">
            <Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="0,0,10,0">Да</Button>
            <Button IsCancel="True" MinWidth="60" Background="Maroon">Нет</Button>
        </WrapPanel>
        <TextBlock Style="{StaticResource CustomText}" x:Name="ConfirmBlock" HorizontalAlignment="Center" Margin="0,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="302" Text="Ты выполнил этот челендж?" Height="33" FontSize="20"/>
    </Grid>
</Window>
