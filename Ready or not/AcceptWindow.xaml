<Window x:Class="Ready_or_not.AcceptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ready_or_not"
        mc:Ignorable="d"
        Title="Подтверждение выбора" Height="250" Width="350">
    <Grid>
        <WrapPanel HorizontalAlignment="Center" Margin="0,93,0,93" Width="172">
            <Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="0,0,10,0">Да</Button>
            <Button IsCancel="True" MinWidth="60">Нет</Button>
        </WrapPanel>
        <TextBlock x:Name="ConfirmBlock" HorizontalAlignment="Center" Margin="0,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" Text="Ты выбираешь этот челендж?" Height="33"/>
    </Grid>
</Window>
